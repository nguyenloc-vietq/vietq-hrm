{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "smtp/templates/**/*",
        "outDir": "dist/src"
      },
      {
        "include": "../public/**/*",
        "outDir": "dist/public"
      }

    ]
  },
  "generateOptions": {
    "spec": false
  }
}
