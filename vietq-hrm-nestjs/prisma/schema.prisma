generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tbl_user {
  id             Int       @id @default(autoincrement())
  role           Role      @default(STAFF)
  companyCode    String?
  userCode       String    @unique
  email          String    @unique @db.VarChar(200)
  phone          String
  fullName       String
  avatar         String?
  passwordHash   String    @db.VarChar(100)
  isActive       String    @db.VarChar(1) @default("Y")
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Nếu muốn liên kết sang bảng Role riêng:
  roleId         Int?
  roleEntity     tbl_role_entity? @relation(fields: [roleId], references: [id])
}

enum Role {
  ADMIN
  MANAGER
  STAFF
}

enum UserStatus {
  ACTIVE
  INACTIVE
  DELETED
}

model tbl_role_entity {
  id       Int       @id @default(autoincrement())
  name     Role      @unique
  desc     String?
  users    tbl_user[]
}
